#!/bin/bash
#
# Pre-commit hook for cdn-traffic-report
# Runs: ruff format, ruff lint, pytest
#

set -e

echo "üîç Running pre-commit checks..."
echo ""

# Get the root directory of the git repo
ROOT_DIR=$(git rev-parse --show-toplevel)
cd "$ROOT_DIR"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# ============================================================
# 1. Ruff Format Check
# ============================================================
echo "üìê Checking code format with ruff..."

if ! ruff format --check scripts/ tests/ 2>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Code formatting issues found. Auto-fixing...${NC}"
    ruff format scripts/ tests/

    # Stage the formatted files
    git add scripts/ tests/
    echo -e "${GREEN}‚úÖ Code formatted and staged${NC}"
else
    echo -e "${GREEN}‚úÖ Code format OK${NC}"
fi
echo ""

# ============================================================
# 2. Ruff Lint Check
# ============================================================
echo "üîé Running ruff lint..."

if ! ruff check scripts/ tests/ --fix 2>/dev/null; then
    echo -e "${RED}‚ùå Linting errors found (unfixable)${NC}"
    FAILED=1
else
    # Check if there were auto-fixed issues
    if git diff --name-only scripts/ tests/ | grep -q ".py"; then
        echo -e "${YELLOW}‚ö†Ô∏è  Some issues auto-fixed. Staging changes...${NC}"
        git add scripts/ tests/
    fi
    echo -e "${GREEN}‚úÖ Lint OK${NC}"
fi
echo ""

# ============================================================
# 3. Unit Tests
# ============================================================
echo "üß™ Running unit tests..."

if python -m pytest tests/ -q 2>/dev/null; then
    echo -e "${GREEN}‚úÖ Tests passed${NC}"
else
    echo -e "${RED}‚ùå Tests failed${NC}"
    FAILED=1
fi
echo ""

# ============================================================
# Final Result
# ============================================================
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}‚ùå Pre-commit checks failed. Please fix the errors above.${NC}"
    exit 1
else
    echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
    exit 0
fi
